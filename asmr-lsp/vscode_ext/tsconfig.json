{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"src/asmr/*.wasm.d.ts"
	]
}
